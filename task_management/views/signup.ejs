<html>
    <head>
        <%- include("__bootstrap.ejs")%>
    </head>
    <body>
        <div class="container d-flex justify-content-center align-items-center" style="height:100vh">
           <div class="" style="width:30%; height:auto; box-shadow: 10px 10px 10px 10px grey;">
              <h5 class="bg-secondary p-2 text-center text-white">Sign Up</h5>
              <form class="p-2" method="post" action="/admin/sign-up">
                <div class="form-group">
                    <input name="email" type="text" placeholder="Enter email id" class="form-control"/>
                </div>
                <div class="form-group">
                  
                    <input name="password" type="password" placeholder="Enter password" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Select Role:</label><br>
                    <input type="radio" name="role" value="user" checked> User
                    <input type="radio" name="role" value="admin"> Admin
                </div>
                <div class="form-group d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Sign Up</button>
                    <a href="/admin/sign-in">Sign In</a>
                </div>
              </form>
           </div>
        </div>
    </body>
</html>
